<script type="text/javascript" src="assets/js/login.js"></script>
<div class="row">
  <div class="col">
    {{> credits }}
  </div>
  <div class="col-md-6 col-md-offset-3">
    <form class="card-body nes-container is-rounded" id="login" >
      <div class="form-group nes-field">
        <label for="email">Email address</label>
        <input type="email" class="form-control nes-input" id="email" aria-describedby="emailHelp"
          placeholder="Email" required>
      </div>
      <div class="form-group nes-field">
        <label for="password">Password</label>
        <input type="password" class="form-control nes-input" id="password" placeholder="Password" required>
      </div>
      <div id="alert" style="height: 0; overflow: hidden;" class="error text-danger">Password and email combination do not match a known account</div>
      <button type="submit" class="nes-btn is-primary">Login</button>
    </form>
  </div>
</div>